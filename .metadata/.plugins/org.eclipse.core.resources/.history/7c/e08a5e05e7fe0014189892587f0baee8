package com.geertenvink.Bardiche;

import java.util.ArrayList;

import com.stephengware.java.planware.logic.Disjunction;
import com.stephengware.java.planware.logic.Expression;

public class BardicheGoal extends Disjunction {
	int numGoals;
	int possibleGoals;
	ArrayList<Expression> possibleGoal = new ArrayList<Expression>()
	
	public BardicheGoal(Disjunction goal) {
		super(goal.arguments.toArray());
		numGoals = arguments.length;
		
		for (int n = 0; n < arguments.length; n++) {
			if (isPossible(arguments.get(n))) possibleGoals++;
		}
	}
	
	private boolean isPossible(Expression subGoal) {
		return true;
	}
	
	public Expression getGoal() {
		return this;
	}
}
